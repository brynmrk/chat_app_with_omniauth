<div class="room-header">
  <h1><%= link_to "<span class='glyphicon glyphicon-chevron-left' aria-hidden='true'></span>".html_safe, chat_rooms_path %> <%= @chat_room.title %></h1>
</div>

<div id="messages" data-chat-room-id="<%= @chat_room.id %>">
  <%= render @chat_room.messages %>
  <%#= render :partial => 'chat_rooms/message', locals: {messages: @chat_room.messages} %>
</div>

<%= form_for @message, url: '#' do |f| %>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control' %>
    <small class="text-muted">From 2 to 1000 characters</small>
  </div>

  <%= f.submit "Post", class: 'btn btn-primary btn-lg' %>
<% end %>